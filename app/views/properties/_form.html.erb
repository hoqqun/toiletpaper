<%= form_for(property) do |f| %>
  <% if property.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(property.errors.count, "error") %> 登録できませんでした。:</h2>

      <ul>
      <% property.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :rent %>
    <%= f.number_field :rent %>円
  </div>

  <div class="field">
    <%= f.label :address %>
    <%= f.text_field :address %>
  </div>

  <div class="field">
    <%= f.label :age %>
    <%= f.number_field :age %>年
  </div>

  <div class="field">
    <%= f.label :note %>
    <%= f.text_area :note %>
  </div>

  <hr>

  <%= f.fields_for :nearest_stations do |nearest_station| %>
    <h2>最寄り駅<%= nearest_station.index + 1 %></h2>
    <%= nearest_station.hidden_field :number %>
    <div class="field">
      <%= nearest_station.label :rail_way %>
      <%= nearest_station.text_field :rail_way %>
    </div>
    <div class="field">
      <%= nearest_station.label :name %>
      <%= nearest_station.text_field :name %>
    </div>
    <div class="field">
      <%= nearest_station.label :on_foot %>
      <%= nearest_station.number_field :on_foot %>分
    </div>
  <% end %>
  
  <div class="actions">
    <%= f.submit "登録する" %>
  </div>
<% end %>
